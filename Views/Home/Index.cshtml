@model MangaModelViewList

<h1>Manga Store</h1>
    <div>Welcome to our manga store</div>
<p>Our aim is to offer the full range of foreign literature in the main world languages. 
    Every day we select for you titles in different languages, genres and thus complete the assortment, numbering millions of books titles. 
    With us, there are no limits for books. That is why you will always find what you are looking</p>
    <div>Would you like to check out our <a href="/Home/CatalogPage"> manga colection.</a></div>
<a href="/Home/CatalogPage" class="Button">Go to catalog</a>
<div></div>

@*<button class="btn btn-primary <a href=" /Home/CatalogPage">">Go to Catalog</a> </button>*@
@*}
else
{

    @foreach (var manga in Model.List)
    {
        <div onclick="loadManga('@manga.Id')" id="manga-container" class="container">
            <h4>@manga.Title : @manga.Author</h4>
            <div class="row">
                <div class="col-md-3">
                    <img src="@manga.PictureUrl" class="img-thumbnail" />
                </div>
                <div class="col-md-9">
                    @manga.Description
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    Price: @manga.Price
                </div>
                <div class="col text-right">
                    Genre: @manga.Genre
                </div>
            </div>
        </div>
        <hr />

    }
    <nav aria-label="...">
        <ul class="pagination">
            
                @if(Model.CurrentPage == 1)
                {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
            }
            else
            {
                 <li class="page-item ">
                    <a class="page-link" href="/Home/Index?currentPage=@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                </li>
            }
                
            
            @for (int i = 0; i < Model.TotalPages; i++)
            {
                @if (i + 1 == Model.CurrentPage)
                {
                    <li class="page-item active">
                        <a class="page-link" href="/Home/Index?currentPage=@(i+1)">@(i + 1) <span class="sr-only">(current)</span></a>
                    </li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/Home/Index?currentPage=@(i+1)">@(i+1)</a></li>
                }


            }
            
                @if (Model.CurrentPage == Model.TotalPages)
                {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
                }
                else
                {
                    <li class="page-item">
                    <a class="page-link" href="/Home/Index?currentPage=@(Model.CurrentPage+1)">Next</a>
                </li>
                }
                
           

        </ul>
    </nav>
}

<script>
    const loadManga = (mangaId) =>{
        window.location = '/Home/MangaDetails?mangaId=' + mangaId;
    }
</script>*@


